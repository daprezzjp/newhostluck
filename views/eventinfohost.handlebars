{{> html_head}}
{{> navbar}}

<div class="container">
  <h2>Event Info</h2>
  {{#events}}
  {{#if @last}}
      <h3> Event name: {{eventname}}</h3>
      <h3> Day: {{date}}</h3>
      <h3> Time: {{time}}</h3>
  {{/if}}
  {{/events}}
  {{#hosts}}
  
  <h3> Hosted Food: {{name}}</h3>


  {{#addresses}}
  <h3>{{#if @last}}<a href="http://maps.apple.com/?daddr={{street}},+{{city}}+{{state}}+{{zip}}">{{street}} {{city}}, {{state}} <br />{{zip}}</a>{{/if}}</h3>
  {{/addresses}}




  <a href="/recipe" class="btn btn-lg btn-default col-sm-6">Recipe</a>
  <a href="/cancelled" class="btn btn-lg btn-default col-sm-6">Cancel Event</a>
  <div role="collapsible">
    <h1>My Ingredients</h1>
    <fieldset data-role="controlgroup">
      <input type="checkbox" name="checkbox-1" id="checkbox-1" class="custom" />
      <label for="checkbox-1">Onions</label>
      <input type="checkbox" name="checkbox-2" id="checkbox-2" class="custom" />
      <label for="checkbox-2">Beans</label>
      <input type="checkbox" name="checkbox-3" id="checkbox-3" class="custom" />
      <label for="checkbox-3">Corn On The Cob</label>
    </fieldset>
  </div>
  <a href="http://maps.apple.com/?daddr={{street}},+{{city}}+{{state}}+{{zip}}">Address: {{street}}, {{city}}, {{state}} {{zip}}</a>
</div>

</body>
{{> footer_back_home}}
</html>
